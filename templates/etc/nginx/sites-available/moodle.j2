# Default server configuration
#
server {
	listen 443 ssl;
	listen [::]:443 ssl;

	client_max_body_size	1024M;

	ssl_certificate {{ moodlebox_tls_cert_pem }};
	ssl_certificate_key {{ moodlebox_tls_key_pem }};
	
	root {{ moodlebox_moodle_source_dir }};

	index index.php index.html index.htm index.nginx-debian.html;

	server_name {{ moodlebox_hostname }};

	location / {
		try_files $uri $uri/ =404;
	}

	location /dataroot/ {
		internal;
		alias {{ moodlebox_moodle_data_dir }}/;
	}

	location ~ [^/]\.php(/|$) {
		include fastcgi_params;
		fastcgi_split_path_info	^(.+\.php)(/.+)$;
		fastcgi_read_timeout	300;
		fastcgi_pass	unix:/var/run/php/php7.3-fpm.sock;
		fastcgi_index	index.php;
		fastcgi_param	PATH_INFO	$fastcgi_path_info;
		fastcgi_param	SCRIPT_FILENAME	$document_root$fastcgi_script_name;
		fastcgi_param	PHP_VALUE "max_execution_time=300\n upload_max_filesize=1024M\n post_max_size=1024M";
		client_max_body_size	1024M;
	}

}
